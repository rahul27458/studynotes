@import 'nib'
@import 'util'

// Fonts

$serif = "skolar", Caslon, Baskerville, Palatino, "Palatino Linotype", "Hoefler Text", Garamond, "URW Palladio L", "Book Antiqua", Georgia, serif
$sans-serif = "proxima-nova", Helvetica, sans-serif
$title-font = "ff-prater-script-web", $serif

// Colors

$red = #E0162B
$blue = #0052A5

$lightest_gray = #EEE
$lighter_gray = #CCC
$light_gray = #999
$gray = #666
$dark_gray = #555
$darker_gray = #333

//
// STRUCTURE AND TYPOGRAPHY
//

*
  box-sizing: border-box

html
  font-size: 10px
  line-height: 15px
  overflow-y: scroll

body
  color: $darker_gray
  font-family: $sans-serif
  font-size: 1.6rem
  -webkit-font-smoothing: antialiased
  line-height: 1.6rem
  margin: 0
  max-width: 1800px
  padding: 0
  position: relative

img
  max-width: 100%

ul, ol
  list-style-type: none
  margin: 0
  padding: 0

a
  {$link}
    color: $blue
    text-decoration: none

  {$focus}
    text-decoration: underline

h1, h2, h3, h4, h5
  font-family: $serif
  font-weight: bold
h1
  font-size: 2.8rem
  line-height: 2.8rem
h2
  font-size: 2.4rem
  line-height: 2.4rem
h3
  font-size: 2.0rem
  line-height: 2.0rem
h4
  font-size: 1.8rem
  line-height: 1.8rem
h5
  font-size: 1.6rem
  line-height: 1.6rem


//
// CONTAINER
//


//
// HEADER
//

$header_height = 50px
$header_border = 3px solid #000

#header
  border-bottom: 1px solid $lighter_gray
  height: $header_height
  position: relative

  ul
    position: absolute
    top: 0

    &.left
      left: 0

      li a
        {$link}
          border-right: 1px solid $lighter_gray
        {$focus}
          border: $header_border
          padding: 15px 16px 0 15px

    &.right
      right: 0

      li a
        {$link}
          border-left: 1px solid $lighter_gray
        {$focus}
          border: $header_border
          padding: 15px 15px 0 16px
        &.on
          background-color: #000
          border: $header_border
          height: $header_height // to cover up 1px gray bottom border
          padding: 15px 15px 0 16px
          color: #fff

    li
      float: left
      font-weight: bold
      font-size: 1.35rem
      text-transform: uppercase

      a
        {$link}
          color: #000
          display: block
          height: $header_height - 1
          padding: 18px 18px 0 18px
        {$focus}
          text-decoration: none

        &.current
          {$link}
            color: $red

  .search
    font-weight: normal
    padding: 3px
    text-transform: none
    // width: 100%

    {$focus}
      border: $header_border
      padding: 0

    input
      border: 0
      font-size: 1.4rem
      height: $header_height - 7
      outline: 0
      padding-left: 20px
      width: 100%

    ::-webkit-input-placeholder
      color: #000
    :-moz-placeholder
      color: #000


//
// BROWSE
//

#browse-wrapper
  background-color: #000
  padding: 0 30px

#browse
  height: 0
  padding: 0
  overflow: hidden
  width: 100%
  z-index: 10

  transition-property: padding, height
  transition-duration: .5s

  &.on
    height: 320px
    padding: 30px 0

    transition-property: padding, height
    transition-duration: .5s

  & > li
    border-right: 1px solid $darker_gray
    display: inline-block
    padding: 0 15px
    vertical-align: top
    width: 32%

    &:last-child
      border-right: 0

    h2
      font-size: 1.9rem
      margin-top: 0
      text-transform: uppercase

    li
      font-family: $serif
      padding: 5px 0

  a
    {$link}
      color: #fff
      display: block
      overflow: hidden
      text-overflow: ellipsis
      white-space: nowrap
      width: 100%



