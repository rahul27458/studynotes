@import 'nib'
@import 'util'

// Fonts

$serif = "skolar", Caslon, Baskerville, Palatino, "Palatino Linotype", "Hoefler Text", Garamond, "URW Palladio L", "Book Antiqua", Georgia, serif
$sans-serif = "proxima-nova", Helvetica, sans-serif
$title-font = "ff-prater-script-web", $serif

// Colors

$red = #E0162B
$blue = #0052A5

$lightest_gray = #EEE
$lighter_gray = #CCC
$light_gray = #999
$gray = #666
$dark_gray = #555
$darker_gray = #333

//
// STRUCTURE AND TYPOGRAPHY
//

*
  box-sizing: border-box

html
  font-size: 10px
  line-height: 15px
  overflow-y: scroll

body
  color: $darker_gray
  font-family: $sans-serif
  -webkit-font-smoothing: antialiased
  margin: 0
  max-width: 1800px
  padding: 0
  position: relative

img
  max-width: 100%

ul, ol
  list-style-type: none
  margin: 0
  padding: 0

a
  {$link}
    color: $blue
    text-decoration: none

  {$focus}
    text-decoration: underline

h1, h2, h3, h4, h5
  font-weight: bold
h1
  font-size: 2.8rem
  line-height: 2.8rem
h2
  font-size: 2.4rem
  line-height: 2.4rem
h3
  font-size: 2.0rem
  line-height: 2.0rem
h4
  font-size: 1.8rem
  line-height: 1.8rem
h5
  font-size: 1.6rem
  line-height: 1.6rem

//
// CONTAINER
//


//
// HEADER
//

$header_height = 50px
$header_border = 3px solid #000

#header
  border-bottom: 1px solid $lighter_gray
  height: $header_height

  ul
    &.left
      float: left

      li a
        {$link}
          border-right: 1px solid $lighter_gray
        {$focus}
          border: $header_border
          padding: 15px 16px 0 15px

      .home h1
        font-size: inherit

      .search
        font-weight: normal
        padding: 3px
        text-transform: none

        {$focus}
          border: $header_border
          padding: 0

        input
          border: 0
          font-size: 1.4rem
          height: $header_height - 7
          outline: 0
          padding-left: 20px
          width: 100%

        ::-webkit-input-placeholder
          color: #000
        :-moz-placeholder
          color: #000

    &.right
      float: right

      li a
        {$link}
          border-left: 1px solid $lighter_gray
        {$focus}
          border: $header_border
          padding: 15px 15px 0 16px

    li
      float: left
      font-weight: bold
      font-size: 1.35rem
      text-transform: uppercase

      a
        {$link}
          color: #000
          display: block
          height: $header_height - 1
          padding: 18px 18px 0 18px
        {$focus}
          text-decoration: none


//
// BROWSE
//

#browse
  height: 348px;
  margin: 20px 0;
  padding: 0 50px;

  transition-property: padding, height;
  transition-duration: .5s;


















