    //-   li.newsletter: a(href='http://www.smashingmagazine.com/the-smashing-newsletter/', title='Subscribe to our Email Newsletter (107K)') Newsletter

  #container-outer
    #container-inner.clearfix
      nav
        ul#nav
          each course in locals.courses
            li
              a(href='/ap-notes/#{course.slug}')= course.name
              ul
                each notetype in course.notetypes
                  li: a(href='/ap-notes/#{course.slug}/#{notetype.slug}')= notetype.name

      #content
        block content

  aside#sidebar
    include sidebar

  footer#footer
    include footer
  
