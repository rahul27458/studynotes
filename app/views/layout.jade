head
  include head

body(class='{locals.cls}')

  nav
    ul#topnav.network
      li#logo.home
        a(href='/', title='Jump to the front page of Study Notes')
          img(src='/images/logo.png', alt="Study Notes")
      each item, cls in locals.topnav
        if cls != 'index'
          li: a(href='#{item.url}', class='#{cls} #{locals.cls == cls ? 'current' : ''}')= item.shortname
    
