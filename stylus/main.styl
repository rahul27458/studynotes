@import 'nib'
@import 'util'

//
// FONTS
//

$heroFont = 'adelle', Georgia, serif
$titleFont = 'freight-sans-pro', Helvetica, sans-serif
$bodyFont = 'proxima-nova', Helvetica, sans-serif


//
// COLORS
//

$red = #E0162B

$lightBlue = #41B7D8
$blue = #08C
$darkBlue = #005580

$lightestGray = #EEE
$lighterGray = #CCC
$lightGray = #999
$gray = #666
$darkGray = #555
$darkerGray = #333


//
// STRUCTURE AND TYPOGRAPHY
//

*
  box-sizing: border-box
  line-height: 1.4em

html
  font-size: 10px
  overflow-y: scroll

body
  color: $darkerGray
  font-family: $bodyFont
  font-size: 1.6rem
  margin: 0
  max-width: 1800px
  padding: 0
  position: relative
  -webkit-font-smoothing: antialiased

img
  max-width: 100%

ul, ol
  margin: 0
  padding: 0

a
  {$link}
    color: $blue
    text-decoration: none

  {$focus}
    color: $darkBlue
    text-decoration: underline

h1, h2, h3, h4, h5
  font-family: $titleFont
  font-weight: 500
  line-height: 1.2em
  text-rendering: optimizelegibility
h1
  font-size: 3.6rem
h2
  font-size: 2.4rem
h3
  font-size: 2.0rem
h4
  font-size: 1.8rem
h5
  font-size: 1.6rem

p
  margin: 1em 0

ul.listing
  list-style-type: none
  li
    background: #EEE
    color: $darkerGray
    ellipsis()
    padding: 10px 25px
  li:nth-child(even)
    background: #FFF

  .content &
    font-weight: bold

.gray
  color: $lightGray

.center
  text-align: center

//
// HEADER
//

$headerHeight = 50px

$headerBorder = 1px solid rgba(255, 255, 255, 0.3)
$solidHeaderBorder = 1px solid $lighterGray

$headerBorderFocus = 3px solid #FFF
$solidHeaderBorderFocus = 3px solid #000

$logoWidth = 131px

.header
  background-color: transparent
  border-bottom: $headerBorder
  height: $headerHeight
  left: 0
  position: fixed
  top: 0
  width: 100%
  z-index: 10

  .solidHeader &
    background-color: #FFF
    border-bottom: $solidHeaderBorder

  ul
    list-style-type: none
    padding: 0 // reset global ul padding
    position: absolute
    top: 0

    &.left
      left: 0

      li a
        {$link}
          border-right: $headerBorder
        {$focus}
          border: $headerBorderFocus
          padding: 14px 16px 0 15px

        .solidHeader &
          {$link}
            border-right: $solidHeaderBorder
          {$focus}
            border: $solidHeaderBorderFocus

    &.right
      right: 0

      li a
        {$link}
          border-left: $headerBorder
        {$focus}
          border: $headerBorderFocus
          padding: 14px 15px 0 16px
        &.on
          border: $headerBorderFocus
          height: $headerHeight - 1
          padding: 14px 15px 0 16px

        .solidHeader &
          {$link}
            border-left: $solidHeaderBorder
          {$focus}
            border: $solidHeaderBorderFocus
          &.on
            border: $solidHeaderBorderFocus

    li
      float: left
      font-weight: bold
      font-size: 1.35rem
      line-height: 1.0em
      text-transform: uppercase

      a
        {$link}
          color: #FFF
          display: block
          height: $headerHeight - 1
          padding: 17px 18px 0 18px

        {$focus}
          text-decoration: none

        .solidHeader &
          {$link}
            color: #000

  .search
    padding: 3px
    text-transform: none

    {$focus}
      border: $headerBorderFocus
      padding: 0

    html:not(.solidHeader) &
      background-image: linear-gradient(top, rgba(255,255,255,0.1), rgba(255,255,255,0.15))
      box-shadow: inset 0 2px 2px rgba(0,0,0,0.5)

    .solidHeader &
      {$focus}
        border: $solidHeaderBorderFocus

    input
      background-color: transparent
      border: 0
      color: #FFF
      font-size: 1.4rem
      height: $headerHeight - 7
      outline: 0
      padding-left: 20px
      width: 100%

      .solidHeader &
        color: #000


    ::-webkit-input-placeholder
      color: #FFF
    :-moz-placeholder
      color: #FFF
    :-ms-input-placeholder
      color: #FFF

    .solidHeader &
      ::-webkit-input-placeholder
        color: #000
      :-moz-placeholder
        color: #000
      :-ms-input-placeholder
        color: #000

  .courses
    &:after
      content: "\25bc"
      font-size: 1.2rem
      padding-left: 8px 

    &.on:after
      content: "\25b2" 


//
// BROWSE
//

$browseHeight = 450px
.browseWrapper
  background-color: #000
  padding: 0 30px
  position: fixed
  top: $headerHeight
  width: 100%
  z-index: 50

.browse
  height: 0
  padding: 0
  overflow: hidden

  transform: translateZ(0);
  transition-property: padding, height
  transition-duration: .5s

  &.on
    height: $browseHeight
    padding: 30px 0

    transition-property: padding, height
    transition-duration: .5s

  & > li
    border-right: 1px solid $darkerGray
    display: inline-block
    padding: 0 15px
    vertical-align: top
    width: 32%

    &:last-child
      border-right: 0

    h2
      font-size: 1.9rem
      font-weight: bold
      margin-top: 0
      text-transform: uppercase

    li
      margin: 5px 0

  a
    {$link}
      color: #FFF
      display: block
      ellipsis()
      width: 100%


//
// HERO
//

$heroHeight = $browseHeight + $headerHeight
$heroMiniHeight = 250px + $headerHeight
.hero
  background-position: center center
  background-repeat: no-repeat
  background-size: cover
  height: $heroHeight
  left: 0
  position: fixed
  top: 0
  width: 100%

  body.home &
    hero-image: url('/images/hero/outdoor-ipad-books.jpg'), .4, .2
  body.course.english &
    hero-image: url('/images/hero/english.jpg')
  body.course.us-government &
    hero-image: url('/images/hero/us-government.jpg')
  body.course.us-history &
    hero-image: url('/images/hero/us-history-2.jpg')

  .text
    color: #FFF
    margin: 120px 50px 50px 50px
    text-align: center

  h1, h2, h3
    font-family: $heroFont
    text-shadow: 1px 1px 1px #000
    margin: 0.3em 0
  h1
    font-size: 10.0rem
    font-weight: bold
    text-shadow: 2px 2px 2px #000
  h2
    font-size: 4.5rem
  h3
    font-size: 3.0rem
    
.heroMini
  @extend .hero
  height: $heroMiniHeight

  .text
    margin: 110px 50px 50px $logoWidth
    text-align: left

  h1
    font-size: 5.0rem
  h2
    font-size: 3.0rem
  h3
    font-size: 2.0rem


//
// CONTENT
//

$sidebarWidth = 336px
$sidebarMarginLeft = 100px
$sidebarMarginRight = 40px
$contentPaddingTop = 50px

.contentWrapper
  background: #FFF
  float: left
  margin-right: - ($sidebarWidth + $sidebarMarginLeft + $sidebarMarginRight)
  margin-top: $headerHeight
  padding: $contentPaddingTop 0 50px $logoWidth
  position: relative
  width: 100%

  .isHero &
    margin-top: $heroHeight
  .isHeroMini &
    margin-top: $heroMiniHeight


.content
  margin-right: ($sidebarWidth + $sidebarMarginLeft + $sidebarMarginRight)

  h1
    border-bottom: 1px solid $lightestGray
    margin: 10px 0 30px 0
    padding-bottom: 20px

  ul:not(.listing)
    padding-left: 20px

.breadcrumbs
  font-size: 1.5rem
  font-weight: bold
  text-transform: uppercase

  .divider::before
    content: '\2192'
    margin: 0 7px

.noteNav
  margin-top: 30px

  .prev, .next
    display: inline-block
    ellipsis()
    font-weight: bold
    width: 45%      

  .prev
    float: left

    &:before
      content: '\25c0'
      float: left
      font-size: 1.2rem    
      padding-right: 10px

  .next
    float: right
    text-align: right

    &:before
      content: '\25b6'
      float: right
      font-size: 1.2rem
      padding-left: 10px
   


//
// SIDEBAR
//

.sidebar
  background: #FFF
  float: right
  margin: $contentPaddingTop $sidebarMarginRight 0 $sidebarMarginLeft
  padding-top: $headerHeight
  position: relative
  width: $sidebarWidth

  .isHero &
    margin-top: $heroHeight
  .isHeroMini &
    margin-top: $heroMiniHeight

  .ad
    margin-bottom: 15px


//
// PAGE-SPECIFIC STYLES
//

body.course
  .notetype
    display: block
    float: left
    height: 200px
    padding: 0 10px 10px 0
    width: 50%

    h2
      background-size: cover
      background-repeat: no-repeat, no-repeat
      height: 100%
      width: 100%
      
      background-image: linear-gradient(top, rgba(0,0,0,0.3), rgba(0,0,0,0.1))
      &.vocabulary
        background-image: linear-gradient(top, rgba(0,0,0,0.3), rgba(0,0,0,0.1)), url('/images/course/vocabulary.jpg')
        background-position: top left, center right

      &.outlines
        background-image: linear-gradient(top, rgba(0,0,0,0.3), rgba(0,0,0,0.1)), url('/images/course/outlines.jpg')
        background-position: top left, center right

    a
      {$link}
        color: #FFF
        display: block
        font-size: 3.8rem
        height: 100%
        padding-top: 70px
        width: 100%
        text-align: center
        text-shadow: 0 1px 1px rgba(#000, 0.5)

      {$focus}
        background-color: rgba(lighten($blue, 40%), 0.6)
        color: #FFF
        text-decoration: none

    .desc
      display: none


//
// AMAZON
//
.amazon
  border-top: 1px solid $lighterGray
  margin-top: 40px

  h3
    margin-bottom: 10px
  p
    margin-top: 10px
  img
    float: left
    padding: 0 20px 0 0

//
// FOOTER
//

.footer
  background: #FFF
  clear: both
  height: 100px
  position: relative
  width: 100%
