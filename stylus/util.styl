// For convenience, when styling links 

$link = '&:link, &:visited'
$focus = '&:hover, &:focus, &:active'

// Clearfix

.clearfix:before, .clearfix:after
  content: ""
  display: table

.clearfix:after
  clear: both


// Misc

.off
  display: none

// Mixins

ellipsis()
  overflow: hidden
  text-overflow: ellipsis
  white-space: nowrap

hero-image(imgSrc, opacityStart = 0.2, opacityEnd = 0.1)
  background-image: linear-gradient-image(100px top, rgba(0,0,0,opacityStart), rgba(0,0,0,opacityEnd)), imgSrc