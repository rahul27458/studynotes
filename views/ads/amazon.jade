if (amazon)
  - var productUrl = 'http://www.amazon.com/gp/product/' + amazon.productId + '/ref=as_li_ss_il?ie=UTF8&camp=1789&creative=390957&creativeASIN=' + amazon.productId + '&linkCode=as2&tag=studynotesorg-20';
  - var productImg = 'http://ws.assoc-amazon.com/widgets/q?_encoding=UTF8&ASIN=' + amazon.productId + '&Format=_SL160_&ID=AsinImage&MarketPlace=US&ServiceVersion=20070822&WS=1&tag=studynotesorg-20';
  - var trackingImg = 'http://www.assoc-amazon.com/e/ir?t=studynotesorg-20&l=as2&o=1&a=' + amazon.productId;

  .amazon
    h3 Need some extra review?
    h4: a(href='#{productUrl}') #{amazon.name}
    a(href='#{productUrl}')
      img(src='#{productImg}')
    p !{amazon.body}
    img(src='#{trackingImg}', width='1', height='1', alt='', style='border:none !important; margin:0px !important;')